@model About
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Yeni Hakkımızda Girişi</h5>
            <br />
        </div>
        <form method="post">
            <br />
            <label>Başlık</label>
            <input type="text"  asp-for="Title" class="form-control" />
            <br />
            <br />
            <label>Image Url</label>
            <input type="text" asp-for="ImageUrl" class="form-control" />
            <br />
            <br />
            <label>Açıklama</label>
            <textarea asp-for="Descripiton" class="form-control" rows="5"></textarea>
            <br />
            <button class="btn btn-primary">Hakkımızda Kaydet</button>
        </form>
    </div>
</div>