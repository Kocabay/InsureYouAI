
@{
    ViewData["Title"] = "CreateArticleWithOpenAI";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">OenAI ile Yapay Zeka Destekli Makale Oluşturma</h5>
        </div>
        <form method="post">
            <br />
            <label>Makale içerigi Özeti</label>
            <input type="text" name="prompt"  class="form-control" />
            <br />
            
            <button class="btn btn-info">AI ile Makale Oluştur</button>
        </form>
        <br />
        @if (ViewBag.article !=null)
        {
            <hr />
            <h5>Oluşturulan AI Makalesi :</h5>
            <div class="alert alert-success">
                @Html.Raw(ViewBag.article.ToString())
            </div>
        }
    </div>
</div>