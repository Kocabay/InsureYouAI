
@{
    ViewData["Title"] = "CreateTestimonialWithClaudeAI";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var testimonials = ViewBag.testimonials;
}

<div class="container mt-5">
    <h2>Claude AI ile Oluşturulan Müşteri Deneyimleri</h2>
    <ul class="list-group mt-3">
        @if (testimonials != null)
        {
            foreach (var item in testimonials)
            {
                <li class="list-group-item">@item</li>
            }
        }
        else
        {
            <li class="list-group-item text-danger">Claud'den veri alınamadı. @ViewBag.testimonials</li>
        }
    </ul>
</div>