@model AboutItem
@{
    ViewData["Title"] = "UpdateAboutItem";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Yeni Hakkımızda Öğeleri Güncelle</h5>
            <br />
        </div>
        <form method="post">
            <input type="hidden" asp-for="AboutItemId"/>
            <br />
            <label>Detaylar</label>
            <input type="text" asp-for="Detail" class="form-control" />
            <br />
            <br />

            <button class="btn btn-outline-success">Hakkımızda Öğeleri Güncelle</button>
        </form>
    </div>
</
